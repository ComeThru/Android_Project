<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_squinting_ice_cream"
    android:orientation="vertical"
    tools:context="com.example.danielmorales.comethru.paleteroRegister">


    <TextView

        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corners"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Company Name"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <EditText
        android:id="@+id/editText2"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corners"
        android:padding="5dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_height="wrap_content"
        android:text="Year Founded"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText5"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corners"
        android:padding="5dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_height="wrap_content"
        android:text="Number of Employees"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corners"
        android:padding="5dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_height="wrap_content"
        android:text="Vehicle Types"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:textColor="@color/common_google_signin_btn_text_dark_focused">


        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Non-Motorized"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Motorized"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/EmailText"
        android:textSize="20dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corners"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Email" />

    <EditText
        android:id="@+id/email"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/passwodText"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corners"
        android:padding="5dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/round_button"
        android:text="Enter"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30dp" />

</LinearLayout>
